@model EShop.MVC.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "تعديل المنتج";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0 arabic-heading">
                        <i class="fa-solid fa-edit me-2"></i>
                        تعديل المنتج
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-controller="AdminProducts" asp-action="Edit" method="post">
                        <input asp-for="Id" type="hidden" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label arabic-text">اسم المنتج</label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Category" class="form-label arabic-text">الفئة</label>
                                    <input asp-for="Category" class="form-control" />
                                    <span asp-validation-for="Category" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label arabic-text">الوصف</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Price" class="form-label arabic-text">السعر (ر.س)</label>
                                    <input asp-for="Price" class="form-control" type="number" step="0.01" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Stock" class="form-label arabic-text">المخزون</label>
                                    <input asp-for="Stock" class="form-control" type="number" />
                                    <span asp-validation-for="Stock" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label arabic-text">رابط الصورة</label>
                            <input asp-for="ImageUrl" class="form-control" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-check mb-3">
                                    <input asp-for="IsAvailable" class="form-check-input" />
                                    <label asp-for="IsAvailable" class="form-check-label arabic-text">متوفر</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check mb-3">
                                    <input asp-for="IsFeatured" class="form-check-input" />
                                    <label asp-for="IsFeatured" class="form-check-label arabic-text">منتج مميز</label>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="fa-solid fa-save me-2"></i>
                                حفظ التغييرات
                            </button>
                            <a asp-controller="AdminProducts" asp-action="Index" class="btn btn-secondary">
                                <i class="fa-solid fa-times me-2"></i>
                                إلغاء
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

