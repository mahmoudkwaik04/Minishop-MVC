@model IEnumerable<EShop.MVC.Models.Product>

@{
    ViewData["Title"] = "المنتجات";
    var currentSearch = ViewData["CurrentSearch"] as string;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="m-0">المنتجات</h2>
        <form method="get" class="d-flex" role="search" asp-controller="Products" asp-action="Index">
            <input name="search" class="form-control" placeholder="ابحث عن منتج..." value="@currentSearch" />
            <button class="btn btn-primary ms-2" type="submit">بحث</button>
        </form>
    </div>

    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            foreach (var p in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="card h-100 shadow-sm">
                        <img class="card-img-top" src="@(string.IsNullOrEmpty(p.ImageUrl) ? "/images/placeholder.png" : p.ImageUrl)" alt="@p.Name" style="height: 200px; object-fit: cover;" />
                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title">@p.Name</h6>
                            <p class="card-text text-muted small">@p.Description</p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="fw-bold text-primary fs-5">@p.Price.ToString("0.00") ر.س</span>
                                    <a class="btn btn-outline-primary btn-sm" asp-controller="Products" asp-action="Details" asp-route-id="@p.Id">
                                        <i class="fa-solid fa-eye me-1"></i>تفاصيل
                                    </a>
                                </div>
                                <div class="d-grid">
                                    <button type="button" class="btn btn-primary" onclick="addToCartAjax('@p.Id', 1)">
                                        <i class="fa-solid fa-cart-plus me-1"></i> أضف إلى السلة
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <i class="fa-solid fa-info-circle me-2"></i>
                    @if (!string.IsNullOrEmpty(currentSearch))
                    {
                        <span>لا توجد منتجات مطابقة لبحثك عن "@currentSearch".</span>
                    }
                    else
                    {
                        <span>لا توجد منتجات متاحة حالياً.</span>
                    }
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
<script>
    function addToCartAjax(productId, quantity = 1) {
        // Butonu devre dışı bırak ve loading göster
        var button = event.target;
        var originalText = button.innerHTML;
        button.disabled = true;
        button.innerHTML = '<i class="fa-solid fa-spinner fa-spin me-1"></i> جاري الإضافة...';
        
        $.ajax({
            url: '@Url.Action("AddToCartAjax", "Cart")',
            type: 'POST',
            data: {
                productId: productId,
                quantity: quantity
            },
            success: function(response) {
                if (response.success) {
                   
                    updateCartCount(response.newCartCount);
                    
                   
                    showNotification(response.message, 'success');
                    
                   
                    button.innerHTML = '<i class="fa-solid fa-check me-1"></i> تمت الإضافة';
                    button.classList.remove('btn-primary');
                    button.classList.add('btn-success');
                    
                    
                    setTimeout(function() {
                        button.innerHTML = originalText;
                        button.classList.remove('btn-success');
                        button.classList.add('btn-primary');
                        button.disabled = false;
                    }, 2000);
                } else {
                    // Hata mesajı göster
                    showNotification(response.message, 'error');
                    
                    // Butonu eski haline döndür
                    button.innerHTML = originalText;
                    button.disabled = false;
                }
            },
            error: function() {
                // Hata mesajı göster
                showNotification('حدث خطأ أثناء إضافة المنتج. يرجى المحاولة مرة أخرى.', 'error');
                
                // Butonu eski haline döndür
                button.innerHTML = originalText;
                button.disabled = false;
            }
        });
    }
</script>
}
